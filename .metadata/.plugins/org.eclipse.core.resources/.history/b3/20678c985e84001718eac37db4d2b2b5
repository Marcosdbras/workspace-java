public class StringUtils {
  
	/**
	 * isEmpty: Método que retorna se string está em brando ou não
	 * 
	 * @param s : String para se analisada
	 * @return : Retorno da analise
	 * 
	 */
	
	public static boolean isEmpty(String s) {
		
		if (s == null) {
			
			return true;
		}
		
	    return s.trim().length() == 0;	
		
	}
	
}
