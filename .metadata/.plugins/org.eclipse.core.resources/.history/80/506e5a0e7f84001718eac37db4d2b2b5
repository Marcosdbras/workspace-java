import br.util.ConsoleUtils;
import br.util.RandomUtils;

public class SorteSua {

	public static void main(String[] args) {
		
		
		/*Sorteia o número*/
		int number = RandomUtils.nextInt(0, 1000);
		
		int guess;
		

		System.out.println("Adivinhe em qual número estou pensando, se vc acertar vc pode ganhar um prêmio");
		
		
		do {
			
			
			System.out.println("Mas, quanto mais tentativas mais baixo fica o valor a receber.");
			System.out.println("Qual é o número? ");
			
			guess = ConsoleUtils.readInt();
			if (guess > number) {
			   System.out.println("O número é maior");	
			} else if (guess < number) {
			   System.out.println("O número é menor");	
			}
			
			
		}while (guess != number);
		
		System.out.println("Você acertou! O Valor que vc ganhou nesta tentativa é R$ "+number/1000);

	}

}
